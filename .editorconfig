root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{js,vue,html,css,json}]
indent_size = 4

[*.java]
ij_java_block_brace_style = end_of_line
ij_java_use_single_class_imports = true

[*.iml]
indent_size = 2

# Tell the CI to stop complaining about the length of the .editorconfig itself
[.editorconfig]
max_line_length = off
